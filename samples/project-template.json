{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "node-sample-cache-template"
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Application Name",
      "discription": "Name of the Node Sample application.",
      "value": "node-todo-frontend",
      "required": true
    },
    {
      "name": "PROJECT_NAME",
      "displayName": "Project Name",
      "discription": "Name of the project where the application will reside.",
      "value": "sample-nodejs",
      "required": true
    },
    {
      "name": "GIT_REPOSITORY",
      "displayName": "Git Repository for the app",
      "value": "https://github.com/ui-router/sample-app-angularjs",
      "required": true
    },
    {
      "name": "GIT_REPOSITORY_JENKINS",
      "displayName": "Git Repository for Jenkins Pipelines",
      "value": "https://github.com/ricardozanini/cacheable-nodejs-jenkins-agent",
      "required": true
    },
    {
      "name": "JENKINS_PIPELINE",
      "displayName": "Jenkins Pipeline to Run",
      "discription": "Jenkins Pipeline (relative to the repo root dir) that will run under this project context. Defaults to build the app from the scratch.",
      "value": "samples/build-pipeline.groovy",
      "required": true
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentconfig": "${NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "apiVersion": "apps.openshift.io/v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "replicas": 1,
        "revisionHistoryLimit": 10,
        "selector": {
          "deploymentconfig": "${NAME}"
        },
        "strategy": {
          "activeDeadlineSeconds": 21600,
          "resources": {},
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "${NAME}",
              "deploymentconfig": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "env": [
                  {
                    "name": "PORT",
                    "value": 8080
                  }
                ],
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "failureThreshold": 3,
                  "httpGet": {
                    "path": "/",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 30,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "timeoutSeconds": 2
                },
                "name": "${NAME}",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "readinessProbe": {
                  "failureThreshold": 3,
                  "httpGet": {
                    "path": "/",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 30,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "timeoutSeconds": 2
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File"
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "schedulerName": "default-scheduler",
            "securityContext": {},
            "terminationGracePeriodSeconds": 30
          }
        },
        "test": false,
        "triggers": [
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["${NAME}"],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${NAME}:latest"
              }
            },
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    },
    {
      "apiVersion": "build.openshift.io/v1",
      "kind": "BuildConfig",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}-s2i"
      },
      "spec": {
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "source": {
          "binary": {},
          "type": "Binary"
        },
        "strategy": {
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "nodejs-8-rhel7:latest",
              "namespace": "openshift"
            }
          },
          "type": "Source"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "imageChange": {},
            "type": "ImageChange"
          }
        ]
      }
    },
    {
      "apiVersion": "build.openshift.io/v1",
      "kind": "BuildConfig",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}-pipeline"
      },
      "spec": {
        "failedBuildsHistoryLimit": 5,
        "nodeSelector": null,
        "postCommit": {},
        "resources": {},
        "runPolicy": "Serial",
        "source": {
          "git": {
            "ref": "master",
            "uri": "${GIT_REPOSITORY_JENKINS}"
          },
          "type": "Git"
        },
        "strategy": {
          "type": "JenkinsPipeline",
          "jenkinsPipelineStrategy": {
            "jenkinsfilePath": "${JENKINS_PIPELINE}",
            "env": [
              { "name": "APP_NAME", "value": "${NAME}" },
              { "name": "PROJECT_NAME", "value": "${PROJECT_NAME}" },
              { "name": "GIT_REPOSITORY_APP", "value": "${GIT_REPOSITORY}"}
            ]
          }
        },
        "successfulBuildsHistoryLimit": 5,
        "triggers": [
          {
            "imageChange": {},
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      },
      "status": {
        "lastVersion": 1
      }
    },
    {
      "apiVersion": "image.openshift.io/v1",
      "kind": "ImageStream",
      "metadata": {
        "generation": 1,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "apiVersion": "route.openshift.io/v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "port": {
          "targetPort": "web"
        },
        "tls": {
          "termination": "edge"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        },
        "wildcardPolicy": "None"
      }
    }
  ]
}
